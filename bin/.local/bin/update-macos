#!/bin/bash

# Run a bunch of update commands for my macOS installs.

set -ex

brew update
brew upgrade --dry-run

{ set +x; } 2>/dev/null
read -p "Update? [y/n]: " ans
case "$ans" in
    [Yy]*)
        brew upgrade
        brew autoremove
        ;;
esac
set -x

brew cleanup

rtx upgrade
rtx prune --yes

(
  pushd ~/Projects/dotfiles/
  git submodule-pull
  nvim +Helptags +qall
)
