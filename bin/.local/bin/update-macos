#!/bin/bash

# Run a bunch of update commands for my macOS installs.

set -ex

brew update
brew upgrade -n

{ set +x; } 2>/dev/null
read -p "Update? [y/n]: " ans
case "$ans" in
    [Yy]*)
        brew upgrade
        brew autoremove
        ;;
esac
set -x

rtx upgrade

(
  pushd ~/Projects/dotfiles/
  git submodule-pull
  vim +Helptags +qall
)
