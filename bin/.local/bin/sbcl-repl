#!/usr/bin/env bash

# Wrap SBCL with a nicer Readline based prompt.

exec rlwrap \
    --command-name sbcl \
    -pWhite \
    --quote-characters '"' \
    --break-chars '(){}[]%@;"' \
    --case-insensitive \
    --multi-line-ext .lisp \
    --file <(awk '{ print $1 }' "$HOME/.local/share/hyperspec/symbols.lisp") \
    sbcl "$@"
