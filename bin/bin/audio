#!/bin/sh

# Audio control script to provide a consistent interface for window managers

usage() {
    printf "usage: %s [-mvpfbh] [-u vol] [-d vol] [-s vol]\\n" "$0"
}

running() {
    ps -ef | grep "$1" | grep -v "grep" | wc -l
}

volume() {
    if [ "$(command -v amixer)" ]; then
        vol_cmd="amixer -q sset 'Master'"
        case "$1" in
            up)     ${vol_cmd} "${2}%+";;
            down)   ${vol_cmd} "${2}%-";;
            mute)   ${vol_cmd} "toggle";;
            set)    ${vol_cmd} "${2}%";;
            get)
                amixer sget 'Master' | grep "\[[0-9]\{1,3\}%\]" | \
                    sed -e '2,$d' -e 's/^.*\[\([0-9]\{1,3\}\)%\].*$/\1/'
        esac
    else
        printf "Error: no valid audio controller is installed\\n"
        exit 1
    fi
}

music() {
    if [ "$(command -v cmus-remote)" ] && [ "$(running 'cmus')" ]; then
        case "$1" in
            play)    cmus-remote -u;;
            forward) cmus-remote -n;;
            back)    cmus-remote -r;;
            info)    ;;
        esac
    elif [ "$(command -v mpd)" ]; then
        [ ! "$(running 'mpd')" ] && mpd
        # TODO add mpd controls
        case "$1" in
            play)    ;;
            forward) ;;
            back)    ;;
            info)    ;;
        esac
    else
        exit 1
    fi
}


# Volume controls
# -m | toggle mute
# -u | up $OPTARG %
# -d | down $OPTARG %
# -v | get volume
# -s | set volume $OPTARG %
#
# Music controls
# -p | play/pause
# -f | forward a track
# -b | back a track
# -i | TODO get music info $OPTARG
# ^ album, artist, title, track, current, length

while getopts mu:d:s:vpfbi:h o "$@"
do
    case "$o" in
        m)      volume "mute";;
        u)      volume "up" "$OPTARG";;
        d)      volume "down" "$OPTARG";;
        s)      volume "set" "$OPTARG";;
        v)      volume "get";;
        p)      music "play";;
        f)      music "forward";;
        b)      music "back";;
        i)      music "info" "$OPTARG";;
        h)      usage ; exit 0;;
        [?])    usage ; exit 1;;
    esac
done
